@using System.Text.Json

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h5">
            Modelo
        </MudText>
    </TitleContent>
    <DialogContent>
        <pre>
            <code style="word-wrap: break-word;">
                @PlanningJson
            </code>
            
        </pre>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" FullWidth="true" OnClick="CloseDialogAsync" Variant="Variant.Filled">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter]
    public string PlanningJson { get; set; } = default!;

    private void CloseDialogAsync()
    {
        MudDialog.Close();
    }
}
