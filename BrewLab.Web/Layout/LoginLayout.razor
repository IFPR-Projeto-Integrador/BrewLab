@inherits LayoutComponentBase
@inject AuthService authService

<MudThemeProvider IsDarkMode="false" Theme="Theme.AppTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudMainContent Style="display: flex; flex-direction: column; justify-content: center; align-content: center; height: 100%; padding-top: 0;">
        @if (authService.HasAttemptedAuthentication)
        {
            @Body
        }
        else
        {
            <Loading />
        }
    </MudMainContent>
</MudLayout>